            android:theme="@style/PreferencesTheme"></activity>
        <activity android:name=".GoToOutdoorRunning" />
        <activity android:name=".OutdoorRunning" />
        <activity android:name=".GymActivities" />
        <activity android:name=".GoToGym" />
        <activity android:name=".Main_Interface" />
        <activity android:name=".Final_Welcome" />
        <activity android:name=".LogIn_Data" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>